package partials

import "github.com/c7/todo.c7.se/todo"

templ EditTodoForm(item *todo.Item) {
	<div class="block py-2 border-b-4 border-dotted border-red-900 draggable">
		<button disabled="disabled" class="mr-2">âŒ</button>
		<button disabled="disabled" class="mr-2">ğŸ“</button>
		<input type="hidden" name="id" value={ item.ID.String() } />
		<form
			method="POST"
			action={ "/todos/"+item.ID.String()+"/edit" }
			hx-target="closest div"
			hx-swap="outerHTML"
			hx-patch={ "/todos/"+item.ID.String() }
			class="inline"
		>
			<input
				type="hidden"
				name="completed"
				if item.Completed {
					value="true"
				} else {
					value="false"
				}
			/>
			<input
				type="text"
				name="description"
				value={ item.Description }
			/>
			<input type="submit" class="hidden" />
		</form>
	</div>
}
