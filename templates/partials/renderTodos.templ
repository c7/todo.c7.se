package partials

import "github.com/c7/todo.c7.se/todo"

templ RenderTodos(list todo.List) {
	<form
		hx-post="/todos/sort"
		hx-trigger="end"
		class="block p-0 mb-2 text-lg"
	>
		<div id="todos" class=" sortable">
			for _, item := range list {
				@RenderTodo(item)
			}
			<div id="no-todos" class="hidden first:block first:pb-2 first:pt-3">
				<p>Congrats, you have no todos! Or... do you? ðŸ˜°</p>
			</div>
		</div>
	</form>
}
